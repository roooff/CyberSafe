<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberSafeDemo</title>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyberSafeDemo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav >
              


        <ul class="menu cf  ">

            <li><a asp-controller="Home" asp-action="Index">Начало</a></li>
            <li>
                <a  asp-controller="Home" asp-action="CyberLab">CyberLab</a>
                <ul class="submenu">
                        <li><a asp-controller="Home" asp-action="AbCyberLab">Какво е CyberLab</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Политика за поверителност</a></li>
                    <li><a asp-controller="Home" asp-action="Target">Цел</a></li>
                </ul>
            </li>
                <li><a asp-controller="Home" asp-action="Blog">Блог</a></li>
            <li>
                <a  asp-controller="Home" asp-action="AboutUs">За Нас</a>
                <ul class="submenu">
                    <li><a asp-controller="Home" asp-action="Contacts">Контакти</a></li>
                        <li><a asp-controller="Home" asp-action="Bio">Биография</a></li>
                </ul>
            </li>
            <li><a id="login" asp-area="Identity" asp-page="/Account/Login">Вход/Регистрация</a></li>
        </ul>          
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-3">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h4>Follow Us</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Instagram</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>Subscribe</h4>
                    <form>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Enter email">
                        </div>
                        <button type="submit" class="btn btn-outline-light">Subscribe</button>
                    </form>
                </div>
            </div>
            <hr>
            <p class="text-center">Copyright &copy; Cybersecurity 2023</p>
        </div>
    </footer>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
